/*

	STRUCTURE

*/

.spacer
	display block
	padding $sm 0
	&--md
		padding $md 0
	&--lg
		padding $lg 0
	&--xl
		padding $xl 0

.content 
	position absolute
	top 50%
	left 50%
	transform translate(-50%, -50%)
	text-align center
	
.icon
	pointer-events none
	display block
	width $md
	height $md
	padding 10px 0
	
	&--lg
		width $xl
		height $xl
		padding 10px 0 $md 0
		
/*

	SKIN
	
*/

.btn
	cursor pointer
	border-radius 8px
	background $colorBtn
	padding 10px 20px 10px 20px
	
	font-size 0.7em
	letter-spacing 0.3em
	text-transform uppercase
	text-decoration none
	
	transition all 0.3s

	&:hover
		background darken($colorBtn, 15)

/*

	ANIMATIONS

*/

.fade-enter-active, .fade-leave-active
	transition opacity 0.3s

.fade-enter, .fade-leave-active
	opacity 0
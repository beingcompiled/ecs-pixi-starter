/*

	VARIABLES

*/

$sm = 15px
$md = 25px
$lg = 50px
$xl = 100px

$colorDark = #222222
$colorMedium = #444444
$colorLight = #FFFFFF
$colorTransparency = rgba(0,0,0,0.5)
$colorBtn = #2481ce

/*

	RESET
	
*/

body
	margin 0
	padding 0
	border 0

a, a:active, a:visited
	color white
	text-decoration none
	
#app
	font-family 'Avenir', Helvetica, Arial, sans-serif
	-webkit-font-smoothing antialiased
	-moz-osx-font-smoothing grayscale
	text-align center
	color $colorDark
	
